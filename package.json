{
  "name": "ftp-ts",
  "version": "0.0.1",
  "description": "FTP Client in TypeScript",
  "author": "Konrad Kuznicki",
  "license": "MIT",
  "main": "dist/index.js",
  "types" : "dist/index.d.ts",
  "keywords": ["ftp", "ftp client", "TypeScript", "ftp-client"],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KonradKuznicki/ftp-ts.git"
  },
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:all": "jest --config jest-all.json",
    "test:all:cov": "jest --coverage --config jest-all.json",
    "test:all:coveralls": "jest --coverage --config jest-all.json --coverageReporters=text-lcov | coveralls"
  },
  "dependencies": {
    "ftp": "^0.3.10",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0"
  },
  "devDependencies": {
    "@types/jest": "24.0.18",
    "@types/node": "12.7.5",
    "@types/supertest": "2.0.8",
    "coveralls": "^3.0.6",
    "ftp-srv": "^4.2.0",
    "jest": "24.9.0",
    "prettier": "1.18.2",
    "supertest": "4.0.2",
    "ts-jest": "24.1.0",
    "ts-node": "8.3.0",
    "tsc-watch": "3.0.1",
    "tsconfig-paths": "3.9.0",
    "tslint": "5.20.0",
    "typedoc": "^0.15.0",
    "typescript": "3.6.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
